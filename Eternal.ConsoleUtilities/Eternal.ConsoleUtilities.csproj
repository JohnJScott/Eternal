<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Helper functions for logging, launching processes, reading and writing Json, Xml, and Yaml files.</Description>
    <Copyright>Copyright 2024 Eternal Developments, LLC. All Rights Reserved.</Copyright>
    <PackageProjectUrl>https://eternaldevelopments.com</PackageProjectUrl>
    <PackageReadmeFile>ReadMe.md</PackageReadmeFile>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>json; xml; yaml, logging</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <Company>Eternal Developments, LLC.</Company>
    <Authors>JohnScott</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="YamlDotNet" Version="15.3.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="ReadMe.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  
    <PropertyGroup>
    <VersionPrefix>1.0.7</VersionPrefix>
    <RepositoryUrl>https://github.com/JohnJScott/Eternal</RepositoryUrl>
    </PropertyGroup>
	
</Project>
